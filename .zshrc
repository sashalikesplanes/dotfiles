function makegif() { ffmpeg -i "$1" -filter_complex "[0:v] fps=12,scale=480:-1,split [a] [b];[a] palettegen [p];[b] [p] paletteuse" "$2" }

# Shorten long nx commands
function ftcr() {
  local command="yarn nx run fine-transfers-client-rest"
  if [ "$#" -gt 0 ]; then
    command+=":$@"
  fi
  echo $command
  eval $command
}

